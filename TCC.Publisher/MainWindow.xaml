<Window x:Class="TCC.Publisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC.Publisher"
        mc:Ignorable="d"
        Title="TCC GitHub Publisher" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="ReleaseNotesTB" Margin="20" AcceptsReturn="True"/>
        <StackPanel Grid.Column="1" Margin="0 20 20 20">

            <Button Content="Generate" VerticalAlignment="Top" Margin="0 0 0 20" Click="Generate"></Button>
            <Button Content="Push" VerticalAlignment="Top" Margin="0 0 0 20" Click="Push"></Button>
        </StackPanel>
        <ListBox Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Margin="20 0 20 20"
                 x:Name="LogList"
                 >
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="0 -2" FontFamily="Lucida Console"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Window>
