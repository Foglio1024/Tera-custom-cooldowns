<windows:TccWidget x:Class="TCC.Windows.Widgets.NotificationAreaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC.Windows.Widgets"
        xmlns:windows="clr-namespace:TCC.Windows"
        xmlns:controls="clr-namespace:TCC.Controls"
        Style="{StaticResource BaseWindowStyle}"
        d:DataContext="{d:DesignInstance local:NotificationAreaViewModel}"
        MouseLeftButtonDown="Drag"
        mc:Ignorable="d"
        Title="NotificationAreaWindow" Height="450" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Name="WindowContent" Grid.Row="1" Margin="10 0">
            <ItemsControl ItemsSource="{Binding Notifications}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="local:NotificationInfo">
                        <local:DefaultNotificationControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <controls:WindowButtons x:Name="Buttons" 
                                WindowName="Notification area"
                                HorizontalAlignment="Left"
                                Margin="7 0"
                                DataContext="{Binding WindowSettings, RelativeSource={RelativeSource AncestorType=windows:TccWidget}}"/>
    </Grid>
</windows:TccWidget>
